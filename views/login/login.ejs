<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Plagip</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .estilo{
            margin-top: 45%;
            box-shadow: 2px 2px 2px 3px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row" >
            <div class="col col-4">
                <div id="log" style="display: block;">
                    <div class="row form-control estilo">
                        <form action="/login/auth" method="post">
                            <div class="col">
                                <div class="row">
                                    <div class="col text-center">
                                        <h4>Login</h4>
                                        <hr>
                                    </div>
                                </div>
                                <div class="row">
                                    <label for="">Email</label>
                                    <input type="email" id="email" name="email" class="form-control" required>
                                </div>
                                <div class="row">
                                    <label for="">Password</label>
                                    <input type="password" id="pass" name="pass" class="form-control" required>
                                </div>
                                <div class="row text-center mt-3">
                                    <div class="col col-6">
                                        <button type="button" class="btn btn-secondary" onclick="registrar()">Registrar</button>
                                    </div>
                                    <div class="col col-6">
                                        <button type="submit" class="btn btn-primary">Ingresar</button>
                                    </div>
                                    
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div id="reg" style="display: none;">
                    <div class="row form-control estilo">
                        <form action="/login/register" method="post">
                            <div class="col">
                                <div class="row">
                                    <div class="col text-center">
                                        <h4>Registro</h4>
                                        <hr>
                                    </div>
                                </div>
                                <div class="row">
                                    <label for="">Email</label>
                                    <input type="email" id="email" name="email" class="form-control" required>
                                </div>
                                <div class="row">
                                    <label for="">Nombre y Apellidos</label>
                                    <input type="text" id="name" name="name" class="form-control" required>
                                </div>
                                <div class="row">
                                    <label for="">Password</label>
                                    <input type="password" id="passr" name="passr" class="form-control"  required>
                                </div>
                                <div class="row">
                                    <label for="">Re-Password</label>
                                    <input type="password" id="repass" name="repass" class="form-control" oninput="compare()" required>
                                </div>
                                <div class="row">
                                    <label id="confirmacion"></label>
                                </div>
                                <div class="row text-center mt-3">
                                    <div class="col col-6">
                                        <button type="button" class="btn btn-secondary" onclick="logear()">Login</button>
                                    </div>
                                    <div class="col col-6">
                                        <button id="ingresar" name="ingresar" type="submit" class="btn btn-primary" disabled="true">Ingresar</button>
                                    </div>
                                    
                                </div>
                            </div>
                        </form>
                    </div>   
                </div>
            </div>
            <div class="col col-8">

            </div>
        </div>
        
        
    </div>




<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
<script>
    function compare(){
        let pass = document.getElementById("passr").value;
        let repass = document.getElementById("repass").value;

        if (pass == repass) {
            document.getElementById("confirmacion").innerHTML = `<i style="color: rgb(59, 163, 67);" class="bi bi-check2-all">Password Iguales</i>`
            document.getElementById('ingresar').disabled = false;
        }else{
            document.getElementById("confirmacion").innerHTML = `<i style="color: red" class="bi bi-check2-all">Password Diferentes</i>`;
            document.getElementById('ingresar').disabled = true;
        }
    }
    function registrar() {
        var log = document.getElementById("log");
        var reg = document.getElementById("reg")

        log.style.display = "none";
        reg.style.display = "block";
    }
    function logear() {
        var log = document.getElementById("log");
        var reg = document.getElementById("reg")

        log.style.display = "block";
        reg.style.display = "none";
    }
</script>
</body>
</html>


